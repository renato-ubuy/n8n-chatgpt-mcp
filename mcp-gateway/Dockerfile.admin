# Simple admin interface Dockerfile
FROM nginx:alpine

# Use existing nginx user

# Copy admin HTML
COPY web-admin.html /usr/share/nginx/html/index.html

# Simple nginx config
RUN echo 'server { \
    listen 3000; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

# Already running as nginx user

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]