# Universal MCP Gateway Configuration

# ===== CORE SETTINGS =====
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ===== DATABASE =====
# SQLite (default)
DATABASE_URL=sqlite:///app/data/gateway.db

# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/mcpgateway
# POSTGRES_DB=mcpgateway
# POSTGRES_USER=gateway
# POSTGRES_PASSWORD=change-me

# ===== AUTHENTICATION =====
AUTH_ENABLED=true
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-key-change-in-production

# OAuth Configuration (optional)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# ===== CORS CONFIGURATION =====
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,https://claude.ai

# ===== PLUGIN SYSTEM =====
PLUGINS_DIR=./plugins
MARKETPLACE_URL=https://registry.mcp-gateway.dev

# Auto-install default plugins on startup
AUTO_INSTALL_PLUGINS=@mcp/n8n-plugin,@mcp/slack-plugin

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FORMAT=json

# ===== PERFORMANCE =====
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Max concurrent workflow executions
MAX_CONCURRENT_WORKFLOWS=10

# ===== CACHING =====
# Redis (optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# ===== MONITORING =====
# Enable Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9464

# ===== SECURITY =====
# Require HTTPS in production
REQUIRE_HTTPS=false

# Trust proxy headers (for reverse proxy setups)
TRUST_PROXY=false

# ===== WEBHOOK SUPPORT =====
WEBHOOK_SECRET=your-webhook-secret-for-validation

# ===== EXTERNAL SERVICES =====
# GitHub integration (for plugin marketplace)
GITHUB_TOKEN=your-github-token

# Slack app credentials (for Slack plugin)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# ===== HOME ASSISTANT INTEGRATION =====
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your-home-assistant-long-lived-token

# ===== N8N INTEGRATION =====
N8N_URL=http://n8n.local:5678
N8N_API_KEY=your-n8n-api-key

# ===== CLOUDFLARE TUNNEL (Remote Access) =====
# Get tunnel token from Cloudflare Zero Trust dashboard
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token
CLOUDFLARE_DOMAIN=mcp-gateway.yourdomain.com

# ===== DEVELOPMENT =====
# Enable debug mode
DEBUG=false

# Hot reload for development
WATCH_PLUGINS=true

# ===== BACKUP =====
# Automatic database backups
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# ===== NOTIFICATIONS =====
# Webhook for system notifications
NOTIFICATION_WEBHOOK=https://your-notification-service.com/webhook

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===== CLUSTER MODE =====
# For multi-instance deployments
CLUSTER_MODE=false
CLUSTER_REDIS_URL=redis://localhost:6379

# ===== FEATURE FLAGS =====
# Enable experimental features
ENABLE_WORKFLOW_AI=false
ENABLE_PLUGIN_SANDBOXING=true
ENABLE_REAL_TIME_COLLABORATION=false