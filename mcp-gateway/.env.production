# Universal MCP Gateway - Production Configuration for right-api.com

# ===== DOMAIN CONFIGURATION =====
DOMAIN=right-api.com
SERVER_URL=https://right-api.com
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ===== CORS CONFIGURATION =====
# Allow Claude.ai and your domain
CORS_ORIGIN=https://claude.ai,https://right-api.com,https://www.right-api.com

# ===== SSL CONFIGURATION =====
REQUIRE_HTTPS=true
TRUST_PROXY=true

# ===== BRANDING =====
GATEWAY_NAME="Right API - Universal MCP Gateway"
GATEWAY_DESCRIPTION="The right API gateway for Claude.ai integrations"
COMPANY_NAME="Right API"
SUPPORT_EMAIL=support@right-api.com

# ===== API ENDPOINTS =====
# Your branded endpoints
API_BASE_URL=https://right-api.com/api
MCP_ENDPOINT=https://right-api.com/mcp
MARKETPLACE_URL=https://registry.right-api.com
DOCS_URL=https://docs.right-api.com

# ===== AUTHENTICATION =====
AUTH_ENABLED=true
JWT_SECRET=${JWT_SECRET_PROD}
SESSION_SECRET=${SESSION_SECRET_PROD}

# OAuth for Right API
OAUTH_CLIENT_ID=${RIGHT_API_OAUTH_CLIENT_ID}
OAUTH_CLIENT_SECRET=${RIGHT_API_OAUTH_CLIENT_SECRET}
OAUTH_REDIRECT_URI=https://right-api.com/auth/callback

# ===== DATABASE =====
# Production PostgreSQL
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/rightapi_gateway

# ===== REDIS CACHING =====
REDIS_URL=redis://${REDIS_HOST}:6379
CACHE_TTL=600

# ===== MONITORING =====
METRICS_ENABLED=true
METRICS_PORT=9464

# Monitoring endpoints
HEALTH_CHECK_URL=https://right-api.com/health
STATUS_PAGE_URL=https://status.right-api.com

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=200

# Premium tier limits
PREMIUM_RATE_LIMIT=1000
ENTERPRISE_RATE_LIMIT=5000

# ===== PLUGINS =====
PLUGINS_DIR=/app/plugins
AUTO_INSTALL_PLUGINS=@right-api/n8n-plugin,@right-api/slack-plugin

# Plugin registry
MARKETPLACE_URL=https://plugins.right-api.com
PLUGIN_REGISTRY_TOKEN=${PLUGIN_REGISTRY_TOKEN}

# ===== NOTIFICATIONS =====
NOTIFICATION_WEBHOOK=https://hooks.right-api.com/notifications
SLACK_WEBHOOK=${SLACK_WEBHOOK_URL}

# ===== BACKUP =====
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=right-api-backups
BACKUP_INTERVAL=6h
BACKUP_RETENTION=30d

# ===== ANALYTICS =====
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=${GA_TRACKING_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# ===== INTEGRATIONS =====
# Default service configurations
N8N_BASE_URL=https://n8n.right-api.com
SLACK_APP_ID=${RIGHT_API_SLACK_APP_ID}
GITHUB_ORG=right-api

# ===== SECURITY =====
WEBHOOK_SECRET=${WEBHOOK_SECRET_PROD}
ENCRYPTION_KEY=${ENCRYPTION_KEY_PROD}

# ===== BUSINESS =====
# Subscription tiers
ENABLE_SUBSCRIPTIONS=true
STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}

# Usage tracking
TRACK_USAGE=true
BILLING_API_URL=https://billing.right-api.com